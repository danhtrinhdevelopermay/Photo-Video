<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme using AppCompat for maximum compatibility -->
    <style name="Theme.iOSStyleMediaViewer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/system_blue</item>
        <item name="colorPrimaryDark">@color/system_blue</item>
        <item name="colorAccent">@color/system_purple</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/system_background</item>
        <item name="colorBackground">@color/system_background</item>
        <item name="android:textColorPrimary">@color/system_label</item>
        <item name="android:textColorSecondary">@color/system_label_secondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.iOSStyleMediaViewer.Fullscreen" parent="Theme.iOSStyleMediaViewer">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>